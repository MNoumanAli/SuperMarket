@model Product;

<div>
    <form method="post" asp-controller="Categories" asp-action="edit">
        <div class="row mob-3 mb-2">
            <div class="col-2">
                <label asp-for="Id" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Id" class="form-control" />
            </div>
        </div>
        <div class="row mob-3 mb-2">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="row mob-3 mb-2">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Description" class="form-control" />
            </div>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" />
        </div>
    </form>
</div>